    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


    <script>

        function addEvent(dayId, title, instructor, room, startTime, endTime, color) {

            // Convert "HH:MM" → minutes since start of day (07:00 = 0)
            const base = 7 * 60;
            const toMinutes = t => {
                const [h, m] = t.split(":").map(Number);
                return h * 60 + m;
            };

            const start = toMinutes(startTime) - base;
            const end = toMinutes(endTime) - base;
            const duration = end - start;

            const event = document.createElement("div");
            event.className = "event";
            event.style.top = start + "px";
            event.style.height = duration + "px";
            event.style.borderLeftColor = color;

            event.innerHTML = `
                <strong>${title}</strong><br>
                <small>${instructor}</small><br>
                <small>${room}</small><br>
                <small>${startTime} - ${endTime}</small>
            `;

            document.getElementById(dayId).appendChild(event);
        }


        addEvent(
            "tuesday",
            "Web Development",
            "Prof. Ada Lovelace",
            "Lab 5B",
            "11:00",
            "13:30",
            "#1976d2"
        );

        addEvent(
            "monday",
            "Algorithms",
            "Dr. Alan Turing",
            "Room 201",
            "08:17",
            "11:55",
            "#f57c00"
        );

        addEvent(
            "friday",
            "AI Fundamentals",
            "Andrew Ng",
            "Auditorium",
            "09:45",
            "11:15",
            "#388e3c"
        );
        </script>


