    <div class="container py-4">

        <div class="d-flex flex-column flex-sm-row align-items-start justify-content-between mb-4">
            <h1 class="fw-bold">Course Timetable</h1>

        </div>

        <!-- FILTER BAR -->
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center border-top border-bottom py-3 mb-4">

            <div class="d-flex gap-2 w-100">

