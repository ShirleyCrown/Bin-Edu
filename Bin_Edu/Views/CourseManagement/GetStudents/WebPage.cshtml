@{
    Layout = "~/Views/Layouts/AdminLayout/LayoutPage.cshtml";
    ViewData["Title"] = "Student In Course Management";
}



<h2 class="mb-4">
    Student Management - <span id="courseTitle">@ViewBag.CourseTitle</span>
</h2>

<input type="hidden" id="courseId" value="@ViewBag.CourseId" />

<!-- TABLE -->
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <input class="form-control w-25" placeholder="Search students..." id="studentKeyword">
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Grade</th>
                    <th>Phone Number</th>
                    <th>School</th>
                    <th>Date of Birth</th>
                </tr>
            </thead>

            <tbody id="studentTableBody">

            </tbody>
        </table>
    </div>

    <!-- PAGINATION -->
    <div class="card-footer d-flex justify-content-center">
        <nav>
            <ul class="pagination mb-0" id="pagination">

            </ul>
        </nav>
    </div>

</div>






<script src="/static/CourseManagement/GetStudents/WebScript.js"></script>