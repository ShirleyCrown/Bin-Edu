@{
    Layout = "~/Views/Layouts/AdminLayout/LayoutPage.cshtml";
    ViewData["Title"] = "Course Management";
}



<h2 class="mb-4">Course Management</h2>

<!-- STATS -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card p-3">
            <div class="text-muted">Total Students</div>
            <h3>1,234</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <div class="text-muted">Active Students</div>
            <h3>1,150</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <div class="text-muted">Inactive Students</div>
            <h3>84</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <div class="text-muted">New Today</div>
            <h3>12</h3>
        </div>
    </div>
</div>

<!-- TABLE -->
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <input class="form-control w-25" placeholder="Search students...">
        <button class="btn btn-outline-danger" disabled>
            <i class="bi bi-trash me-1"></i> Bulk Delete
        </button>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th><input type="checkbox"></th>
                    <th>Student</th>
                    <th>Course</th>
                    <th>Status</th>
                    <th>Joined</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td><input type="checkbox"></td>
                    <td>
                        <div class="d-flex align-items-center gap-2">
                            <img src="https://via.placeholder.com/32" class="rounded-circle avatar">
                            <div>
                                <div class="fw-semibold">John Doe</div>
                                <small class="text-muted">john@example.com</small>
                            </div>
                        </div>
                    </td>
                    <td>Web Development 101</td>
                    <td><span class="badge status-active">Active</span></td>
                    <td>2023-10-26</td>
                    <td>
                        <button class="btn btn-sm btn-light"><i class="bi bi-eye"></i></button>
                        <button class="btn btn-sm btn-light"><i class="bi bi-pencil"></i></button>
                        <button class="btn btn-sm btn-light text-danger"><i class="bi bi-trash"></i></button>
                    </td>
                </tr>

                <tr>
                    <td><input type="checkbox"></td>
                    <td>
                        <div class="d-flex align-items-center gap-2">
                            <img src="https://via.placeholder.com/32" class="rounded-circle avatar">
                            <div>
                                <div class="fw-semibold">Jane Smith</div>
                                <small class="text-muted">jane@example.com</small>
                            </div>
                        </div>
                    </td>
                    <td>UI/UX Design</td>
                    <td><span class="badge status-active">Active</span></td>
                    <td>2023-10-25</td>
                    <td>
                        <button class="btn btn-sm btn-light"><i class="bi bi-eye"></i></button>
                        <button class="btn btn-sm btn-light"><i class="bi bi-pencil"></i></button>
                        <button class="btn btn-sm btn-light text-danger"><i class="bi bi-trash"></i></button>
                    </td>
                </tr>

                <tr>
                    <td><input type="checkbox"></td>
                    <td>
                        <div class="d-flex align-items-center gap-2">
                            <img src="https://via.placeholder.com/32" class="rounded-circle avatar">
                            <div>
                                <div class="fw-semibold">Mike Johnson</div>
                                <small class="text-muted">mike@example.com</small>
                            </div>
                        </div>
                    </td>
                    <td>Data Science</td>
                    <td><span class="badge status-inactive">Inactive</span></td>
                    <td>2023-09-15</td>
                    <td>
                        <button class="btn btn-sm btn-light"><i class="bi bi-eye"></i></button>
                        <button class="btn btn-sm btn-light"><i class="bi bi-pencil"></i></button>
                        <button class="btn btn-sm btn-light text-danger"><i class="bi bi-trash"></i></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- PAGINATION -->
    <div class="card-footer d-flex justify-content-between align-items-center">
        <span class="text-muted">Showing 1–3 of 1,234</span>
        <nav>
            <ul class="pagination mb-0">
                <li class="page-item"><a class="page-link" href="#">«</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
