<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Course Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #f6f7f8;
        }

        .sidebar {
            width: 260px;
            min-height: 100vh;
        }

        .avatar {
            width: 32px;
            height: 32px;
            object-fit: cover;
        }

        .avatar-lg {
            width: 40px;
            height: 40px;
        }

        .status-active {
            background: #d1fae5;
            color: #065f46;
        }

        .status-inactive {
            background: #fef3c7;
            color: #92400e;
        }
    </style>
</head>

<body>

    <div class="d-flex">

        <!-- SIDEBAR -->
        <aside class="sidebar bg-white border-end p-4 d-flex flex-column justify-content-between">

            <div>
                <h5 class="fw-bold mb-4">Admin Panel</h5>

                <ul class="nav nav-pills flex-column gap-2">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="#"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#"><i class="bi bi-people me-2"></i>Student List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="#"><i class="bi bi-mortarboard me-2"></i>Course List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="#"><i class="bi bi-person me-2"></i>Instructor List</a>
                    </li>
                </ul>
            </div>

            <div class="border-top pt-3">
                <a class="nav-link text-dark" href="#"><i class="bi bi-gear me-2"></i>Settings</a>
                <a class="nav-link text-danger" href="#"><i class="bi bi-box-arrow-right me-2"></i>Logout</a>
            </div>

        </aside>

        <!-- MAIN CONTENT -->
        <div class="flex-grow-1">

            <!-- TOP NAVBAR -->
            <nav class="navbar bg-white border-bottom px-4">
                <!-- Empty Placeholder -->
                <div class="invisible w-50">
                    Empty Placeholder
                </div>

                <div class="d-flex align-items-center gap-3">
                    <button class="btn btn-light"><i class="bi bi-bell"></i></button>
                    <div class="d-flex align-items-center gap-2">
                        <img src="https://via.placeholder.com/40" class="rounded-circle avatar-lg">
                        <div class="text-end">
                            <div class="fw-bold">Alex Turner</div>
                            <small class="text-muted">Administrator</small>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- PAGE CONTENT -->
            <main class="p-4">

                <h2 class="mb-4">Course Management</h2>

                <!-- STATS -->
                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <div class="card p-3">
                            <div class="text-muted">Total Students</div>
                            <h3>1,234</h3>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card p-3">
                            <div class="text-muted">Active Students</div>
                            <h3>1,150</h3>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card p-3">
                            <div class="text-muted">Inactive Students</div>
                            <h3>84</h3>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card p-3">
                            <div class="text-muted">New Today</div>
                            <h3>12</h3>
                        </div>
                    </div>
                </div>

                <!-- TABLE -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <input class="form-control w-25" placeholder="Search students...">
                        <button class="btn btn-outline-danger" disabled>
                            <i class="bi bi-trash me-1"></i> Bulk Delete
                        </button>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th><input type="checkbox"></th>
                                    <th>Student</th>
                                    <th>Course</th>
                                    <th>Status</th>
                                    <th>Joined</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <img src="https://via.placeholder.com/32" class="rounded-circle avatar">
                                            <div>
                                                <div class="fw-semibold">John Doe</div>
                                                <small class="text-muted">john@example.com</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>Web Development 101</td>
                                    <td><span class="badge status-active">Active</span></td>
                                    <td>2023-10-26</td>
                                    <td>
                                        <button class="btn btn-sm btn-light"><i class="bi bi-eye"></i></button>
                                        <button class="btn btn-sm btn-light"><i class="bi bi-pencil"></i></button>
                                        <button class="btn btn-sm btn-light text-danger"><i
                                                class="bi bi-trash"></i></button>
                                    </td>
                                </tr>

                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <img src="https://via.placeholder.com/32" class="rounded-circle avatar">
                                            <div>
                                                <div class="fw-semibold">Jane Smith</div>
                                                <small class="text-muted">jane@example.com</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>UI/UX Design</td>
                                    <td><span class="badge status-active">Active</span></td>
                                    <td>2023-10-25</td>
                                    <td>
                                        <button class="btn btn-sm btn-light"><i class="bi bi-eye"></i></button>
                                        <button class="btn btn-sm btn-light"><i class="bi bi-pencil"></i></button>
                                        <button class="btn btn-sm btn-light text-danger"><i
                                                class="bi bi-trash"></i></button>
                                    </td>
                                </tr>

                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <img src="https://via.placeholder.com/32" class="rounded-circle avatar">
                                            <div>
                                                <div class="fw-semibold">Mike Johnson</div>
                                                <small class="text-muted">mike@example.com</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>Data Science</td>
                                    <td><span class="badge status-inactive">Inactive</span></td>
                                    <td>2023-09-15</td>
                                    <td>
                                        <button class="btn btn-sm btn-light"><i class="bi bi-eye"></i></button>
                                        <button class="btn btn-sm btn-light"><i class="bi bi-pencil"></i></button>
                                        <button class="btn btn-sm btn-light text-danger"><i
                                                class="bi bi-trash"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- PAGINATION -->
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <span class="text-muted">Showing 1–3 of 1,234</span>
                        <nav>
                            <ul class="pagination mb-0">
                                <li class="page-item"><a class="page-link" href="#">«</a></li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">»</a></li>
                            </ul>
                        </nav>
                    </div>

                </div>

            </main>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>