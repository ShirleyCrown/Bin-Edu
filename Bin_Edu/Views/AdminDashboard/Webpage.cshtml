@{
    Layout = "~/Views/Layouts/AdminLayout/LayoutPage.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card p-3 text-center">
            <div class="text-muted">Total Courses</div>
            <h3 id="totalCourses">0</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3 text-center">
            <div class="text-muted">Total Students</div>
            <h3 id="totalStudents">0</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3 text-center">
            <div class="text-muted">Select Year</div>
            <select id="yearSelect" class="form-select"></select>
        </div>
    </div>
</div>

<div class="card p-4">
    <h5 class="mb-3">Revenue by Month</h5>
    <canvas id="revenueChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script src="/static/AdminDashboard/WebScript.js"></script>