<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Bootstrap 5.3 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap" rel="stylesheet">

    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">

    <!-- Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <!-- QRCode JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js" integrity="sha512-CNgIRecGo7nphbeZ04Sc13ka07paqdeTu0WR1IM4kNcpmBAUSHSQX0FslNhTDadL4O5SAGapGt4FodqL8My0mA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <style>
        body {
            font-family: "Lexend", sans-serif;
            background-color: #f6f7f8;
        }

        .sidebar {
            width: 260px;
            min-height: 100vh;
        }

        .avatar {
            width: 32px;
            height: 32px;
            object-fit: cover;
        }

        .avatar-lg {
            width: 40px;
            height: 40px;
        }

        .status-active {
            background: #d1fae5;
            color: #065f46;
        }

        .status-inactive {
            background: #fef3c7;
            color: #92400e;
        }
    </style>
</head>

<body>

    <div class="d-flex">

        <!-- SIDEBAR -->
        <aside class="sidebar bg-white border-end p-4 d-flex flex-column justify-content-between">

            <div>
                <h5 class="fw-bold mb-4">Admin Panel</h5>

                <ul class="nav nav-pills flex-column gap-2">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="#"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/admin/dashboard/course-management">
                            <i class="bi bi-mortarboard me-2"></i>
                            Course Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/admin/dashboard/student-management"><i
                                class="bi bi-people me-2"></i>Student List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="#"><i class="bi bi-person me-2"></i>Instructor List</a>
                    </li>
                </ul>
            </div>

            <div class="border-top pt-3">
                <button type="button" class="nav-link text-danger" onclick="logoutAdmin()">
                    <i class="bi bi-box-arrow-right me-2"></i>
                    Logout
                </button>
            </div>

        </aside>

        <!-- MAIN CONTENT -->
        <div class="flex-grow-1">

            <!-- TOP NAVBAR -->
            <nav class="navbar bg-white border-bottom px-4 sticky-top">
                <!-- Empty Placeholder -->
                <div class="invisible w-50">
                    Empty Placeholder
                </div>

                <div class="d-flex align-items-center gap-3">
                    <button class="btn btn-light"><i class="bi bi-bell"></i></button>
                    <div class="d-flex align-items-center gap-2">
                        <img src="https://avatar.iran.liara.run/public/19" class="rounded-circle avatar-lg">
                        <div class="text-end">
                            <div class="fw-bold">Admin</div>
                            <small class="text-muted">Admin</small>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- PAGE CONTENT -->
            <main class="p-4">

                @RenderBody()

            </main>

        </div>
    </div>

    <script src="/static/Layouts/AdminLayout/LayoutScript.js"></script>

</body>

</html>