<div class="modal fade" id="createSubjectModal" tabindex="-1" aria-labelledby="createSubjectModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="createSubjectModalLabel">Create new subject</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <!-- ERROR ALERT -->
                <div id="create-subject-alert" class="d-none alert alert-danger d-flex align-items-center" role="alert">
                    <span class="material-symbols-outlined me-2">error</span>
                    <div id="createSubjectErrorMessage"></div>
                </div>

                <!-- FORM -->
                <form id="createSubjectForm">
                    <div class="mb-3">
                        <label for="SubjectName" class="col-form-label">Subject Name:</label>
                        <input type="text" class="form-control" id="SubjectName" name="SubjectName">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="createSubject()">Create</button>
            </div>
        </div>
    </div>
</div>

<script src="/static/SubjectManagement/CreateSubject/PopupScript.js"></script>