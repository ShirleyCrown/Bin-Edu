@{
    Layout = "~/Views/Layouts/StudentLayout/LAyoutPage.cshtml";
}


<main class="container py-5" style="max-width: 760px;">

    <!-- Page Header -->
    <div class="mb-5 text-center text-md-start">
        <h1 class="fw-bold display-6 mb-2">Privacy Policy</h1>
        <p class="text-muted small">Last Updated: October 24, 2023</p>
    </div>

    <!-- Introduction -->
    <section class="mb-5">
        <p class="fs-5 text-muted">
            We are committed to protecting your personal information and your right to privacy.
            This policy explains how we collect, use, and safeguard your data within our
            <strong>Offline Course System</strong>. By using our platform, you consent to the data
            practices described here.
        </p>
    </section>

    <hr class="my-5">

    <!-- Data Collection -->
    <section class="mb-5">
        <h2 class="h5 fw-semibold mb-3">
            <span class="text-primary me-2">1.</span> Data Collection
        </h2>

        <p class="text-muted">
            We collect specific information to provide a seamless offline learning experience:
        </p>

        <ul class="text-muted">
            <li><strong>Personal Identification:</strong> Name, student ID, email address, profile picture</li>
            <li><strong>Course Data:</strong> Enrollment, progress, quiz scores, submissions</li>
            <li><strong>Offline Logs:</strong> Activity timestamps and synchronization logs</li>
            <li><strong>Device Information:</strong> Device type, OS, unique identifiers</li>
        </ul>
    </section>

    <!-- Data Usage -->
    <section class="mb-5">
        <h2 class="h5 fw-semibold mb-3">
            <span class="text-primary me-2">2.</span> Data Usage
        </h2>

        <p class="text-muted">
            The collected data is used to enhance your educational experience and system reliability:
        </p>

        <div class="row g-4 mt-2">
            <div class="col-md-6">
                <h6 class="fw-semibold mb-1">Synchronization</h6>
                <p class="text-muted small">Syncing offline progress when internet is available.</p>
            </div>
            <div class="col-md-6">
                <h6 class="fw-semibold mb-1">Performance Tracking</h6>
                <p class="text-muted small">Analytics to improve course materials.</p>
            </div>
            <div class="col-md-6">
                <h6 class="fw-semibold mb-1">Support & Security</h6>
                <p class="text-muted small">Troubleshooting and preventing unauthorized access.</p>
            </div>
            <div class="col-md-6">
                <h6 class="fw-semibold mb-1">Communication</h6>
                <p class="text-muted small">Updates, reminders, and notifications.</p>
            </div>
        </div>
    </section>

    <!-- Data Sharing -->
    <section class="mb-5">
        <h2 class="h5 fw-semibold mb-3">
            <span class="text-primary me-2">3.</span> Data Sharing
        </h2>

        <p class="text-muted">
            We do <strong>not sell your personal data</strong>. Information is shared only when necessary:
        </p>

        <ul class="text-muted">
            <li>With instructors and administrators for academic purposes</li>
            <li>With service providers for infrastructure maintenance</li>
            <li>When required by law</li>
        </ul>
    </section>

    <!-- Security Measures -->
    <section class="mb-5">
        <h2 class="h5 fw-semibold mb-3">
            <span class="text-primary me-2">4.</span> Security Measures
        </h2>

        <p class="text-muted mb-3">
            Due to the offline-first nature of our platform, we use enhanced security measures:
        </p>

        <div class="card border-0 bg-light">
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="fw-semibold mb-1">Local Encryption</h6>
                    <p class="text-muted small mb-0">
                        All locally stored data is encrypted using AES-256 standards.
                    </p>
                </div>
                <div>
                    <h6 class="fw-semibold mb-1">Secure Transmission</h6>
                    <p class="text-muted small mb-0">
                        All data transfers use TLS/SSL secured connections.
                    </p>
                </div>
            </div>
        </div>
    </section>

  
    <!-- Contact -->
    <section>
        <h2 class="h5 fw-semibold mb-3">
            <span class="text-primary me-2">5.</span> Contact Us
        </h2>

        <p class="text-muted mb-4">
            For any privacy-related questions, contact our Data Protection Officer:
        </p>

        <div class="row g-4">
            <div class="col-sm-6">
                <h6 class="fw-semibold mb-1">Email Support</h6>
                <a href="mailto:privacy@coursesystem.com" class="text-primary">
                    privacy@coursesystem.com
                </a>
            </div>
            <div class="col-sm-6">
                <h6 class="fw-semibold mb-1">Mailing Address</h6>
                <p class="text-muted small mb-0">
                    123 Education Lane<br>
                    Tech Campus, NY 10012
                </p>
            </div>
        </div>
    </section>

</main>