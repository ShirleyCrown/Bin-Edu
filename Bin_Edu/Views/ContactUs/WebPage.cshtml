@{
    Layout = "~/Views/Layouts/StudentLayout/LAyoutPage.cshtml";
}


<main class="container py-5">

    <!-- Page Heading -->
    <div class="mb-5">
        <h1 class="display-5 fw-bold">Get in Touch</h1>
        <p class="lead text-muted col-lg-8">
            We are here to help you with your learning journey. Reach out for any questions about courses, enrollment,
            or technical support.
        </p>
    </div>

    <div class="row g-5">

        <!-- Contact Form -->
        <div class="col-lg-7 col-xl-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <h2 class="fw-bold mb-4">Send us a Message</h2>

                    <form>
                        <div class="row g-4">

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Full Name</label>
                                <input type="text" class="form-control form-control-lg" placeholder="Nguyen Van A">
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Email</label>
                                <input type="email" class="form-control form-control-lg"
                                    placeholder="nguyenvana@example.com">
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-semibold">Message</label>
                                <textarea class="form-control" rows="6"
                                    placeholder="How can we help you today?"></textarea>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-lg px-4">
                                    Send Message
                                </button>
                            </div>

                        </div>
                    </form>

                </div>
            </div>
        </div>

        <!-- Contact Info Sidebar -->
        <div class="col-lg-5 col-xl-4">

            <!-- Info Card -->
            <div class="card shadow-sm border-0 rounded-4 mb-4">
                <div class="card-body p-4">
                    <h3 class="fw-bold mb-4">Contact Information</h3>

                    <div class="mb-4">
                        <h6 class="fw-bold mb-1">Visit Us</h6>
                        <p class="text-muted mb-0">
                            Bin Edu Center<br>
                            Ho Chi Minh City, 124 Dien Bien Phu 10024
                        </p>
                    </div>

                    <div class="mb-4">
                        <h6 class="fw-bold mb-1">Call Us</h6>
                        <p class="text-muted mb-0">0909113113</p>
                        <small class="text-muted">Mon - Fri from 8am to 5pm</small>
                    </div>

                    <div>
                        <h6 class="fw-bold mb-1">Email</h6>
                        <a href="mailto:binedu@gmail.com" class="text-primary">
                            binedu@gmail.com
                        </a>
                    </div>

                </div>
            </div>

            <!-- Map Card -->
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
